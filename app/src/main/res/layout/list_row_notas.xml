<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#95FFFFFF"
    android:orientation="horizontal"
    android:padding="5dip">

    <TextView
        android:id="@+id/list_name_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_score_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_name_nota"
        android:layout_marginTop="7dp"
        android:fontFamily="@font/open_sans"
        android:textColor="#343434"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_id_nota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/list_score_nota"
        android:layout_alignBottom="@+id/list_score_nota"
        android:layout_alignParentEnd="true"
        android:textColor="#343434"
        android:textSize="18sp" />
</RelativeLayout>